<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextArea?>
<VBox alignment="center"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ChangeNickController">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter new nickname" />
    <TextField fx:id="nicknameField" promptText="nickname" HBox.hgrow="ALWAYS" />
    <TextArea fx:id="textArea" editable="false"/>


    <Button onAction="#tryToChange" text="Change" />


</VBox>
